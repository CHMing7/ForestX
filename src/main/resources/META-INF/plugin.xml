<idea-plugin>
    <id>com.chm.plugin.idea.forestx</id>
    <name>ForestX</name>
    <vendor email="654849388@qq.com" url="https://gitee.com/chming7/ForestX">ForestX</vendor>

    <description><![CDATA[
    Forest Plugin
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.properties</depends>
    <depends>org.jetbrains.plugins.yaml</depends>
    <!-- support aliases -->
    <depends optional="true" config-file="spring.xml">com.intellij.spring</depends>
    <!-- support aliases -->
    <depends optional="true" config-file="spring-boot.xml">com.intellij.spring.boot</depends>
    <!-- support aliases -->


    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <!-- 在service层注入了client对象, 在这个对象进行跳转到 client 类-->
        <codeInsight.lineMarkerProvider id="forestx.InjectionLineMarkerProvider" language="JAVA"
                                        implementationClass="com.chm.plugin.idea.forestx.provider.InjectionLineMarkerProvider"/>

        <codeInsight.lineMarkerProvider id="forestx.ForestMethodProvider" language="JAVA"
                                        implementationClass="com.chm.plugin.idea.forestx.provider.ForestMethodProvider"/>


        <toolWindow id="Forest" secondary="false" anchor="right" icon="/icons/forest-logo-gray-13x13.svg"
                    factoryClass="com.chm.plugin.idea.forestx.tw.RightSidebarToolWindowFactory"/>

        <postStartupActivity implementation="com.chm.plugin.idea.forestx.startup.MyStartupActivity"/>

        <!-- Forest模板语言解析器定义 -->
        <lang.parserDefinition language="ForestTemplate" implementationClass="com.chm.plugin.idea.forestx.template.ForestTemplateParserDefinition"/>

        <!-- Forest模板语言语法荧光笔工厂 -->
        <lang.syntaxHighlighterFactory language="ForestTemplate" implementationClass="com.chm.plugin.idea.forestx.template.highlighter.ForestTemplateSyntaxHighLighterFactory"/>

        <!-- Forest模板语言代码自动补全 -->
        <completion.contributor language="ForestTemplate" implementationClass="com.chm.plugin.idea.forestx.template.completion.ForestTemplateCompletionContributor"/>

        <!-- Forest模板跳转到Yaml配置文件 -->
        <gotoDeclarationHandler order="first" implementation="com.chm.plugin.idea.forestx.template.search.TemplateGotoDeclarationHandler" />


        <fileType
                name="Forest Template File"
                implementationClass="com.chm.plugin.idea.forestx.template.psi.ForestTemplateFileType"
                fieldName="INSTANCE"
                language="ForestTemplate"
                extensions="ft"/>

        <!-- 把Forest模板语言注入到Java源码中 -->
        <multiHostInjector implementation="com.chm.plugin.idea.forestx.template.ForestTemplateToJavaInjector"/>

    </extensions>


    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
